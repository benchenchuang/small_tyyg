/* pages/edit_phone/edit_phone.wxss */
@import '../my_info/my_info.wxss';
.save_phone{
  margin-top: 20rpx;
  font-size: 16px;
  background: #e03232!important;
}
.free-check{
  margin: 30rpx 0;
  font-size: 32rpx;
  color: #666;
  line-height: 48rpx;
}
.code_box{
  margin: 30rpx 0;
  font-size: 30rpx;
}
.code_num{
  float: left;
  width: 60%;
  height: 80rpx;
  margin-right: 5%;
  border-bottom: 1px solid #e4e4e4;
}
.code_num input{
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
}
button.get_code{
  background: #fff!important;
  font-size: 32rpx;
  color: #e03232;
  border-color: #e03232!important;
  border-radius: 80rpx;
}
button.get_code[disabled]{
  border-color: #ccc!important;  
}
