/**index.wxss**/
.swiper swiper{
  height: 400rpx;
}
.swiper image{
  width: 100%;
  height: 400rpx;
}
.nav_box{
  padding: 30rpx;
}
.side_nav{
  float: left;
  width: 50%;
  padding-right: 15rpx;
  box-sizing: border-box;
}
.right_nav{
  margin-left: 50%;
  width: 50%;
  padding-left: 15rpx;
  box-sizing: border-box;
}
.nav_item{
  position: relative;
  display: block;
  width: 100%;
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background: #333;
  border-radius: 10rpx;
}
.nav_item .nav_middle{
  position: absolute;
  width: 100%;
  text-align: center;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.nav_vip{
  height: 430rpx;
  background: #e03232;
}
.nav_item text{
  vertical-align: middle;
}
.nav_item .iconfont{
  margin-right: 10rpx;
  font-size: 88rpx;
}
.nav_charge,
.nav_command,
.nav_code,
.nav_tickets{
  height: 200rpx;
}
.nav_charge{
  background: #47b7ff;
}
.nav_command{
  background: #ffb540;
}
.nav_code{
  background: #6abc67;
}
.nav_tickets{
  background: #7265ab;
}
