/* pages/login/login.wxss */
.logo{
  text-align: center;
}
.logo image{
    width: 200rpx;
    height: 200rpx;
    margin: 120rpx auto 80rpx;
}
.section-item{
    padding:0 30rpx;
    background: #fff;
    overflow: hidden;
}
.section-item .item-list{
    position: relative;
    display: table;
    width: 100%;
    padding: 30rpx 0 20rpx;
    border-bottom: 1px solid #e6e6e6;
}
.section-item .item-list.item-code{
    float: left;
    width: 350rpx;
}
.item-list .iconfont{
    display: table-cell;
    width: 50rpx;
    font-size: 46rpx;
    height: 60rpx;
    line-height: 60rpx;
    vertical-align: middle;
    color: #878787;
}
.item-list input{
    float: left;
    display: table-cell;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #444;
}
.section-item .get-code-box{
    float: right;
    margin-top: 20rpx;
    width: 300rpx;
}
.form-btn{
    padding: 0 30rpx;
    margin-top: 60rpx;
}
.get_code{
  font-size: 16px;
  color: #e03232!important;
  border-color: #e03232!important;
  border-radius: 80rpx;
  /* background: #fff!important; */
}
.btn-sure{
  font-size: 16px;
  color: #fff;
  background: #e03232!important;
  box-sizing: border-box;
}
button.get_code[disabled]{
  color: #999!important;
  border-color: #ccc!important;  
}
